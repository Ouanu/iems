<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 引入 Spring Boot 的默认配置 -->
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- 日志文件存储路径 -->
    <property name="LOG_PATH" value="./storage/logs" />

    <!--
        配置一个基于时间和大小滚动的日志文件 Appender
        ch.qos.logback.core.rolling.RollingFileAppender
    -->
    <appender name="FILE_ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 当前活动日志文件的路径和名称 -->
        <file>${LOG_PATH}/iems.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!--
                归档日志文件的路径和名称模式
                %d{yyyy-MM-dd} - 按天滚动
                %i - 当天内，如果文件大小超过 maxFileSize，则递增索引 (0, 1, 2, ...)
            -->
            <fileNamePattern>${LOG_PATH}/iems-%d{yyyy-MM-dd}.%i.log</fileNamePattern>

            <!-- 每个日志文件的最大大小 -->
            <maxFileSize>10MB</maxFileSize>

            <!-- 日志文件保留的最大历史天数 -->
            <maxHistory>30</maxHistory>

            <!-- 所有归档日志文件的总大小上限 -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <!-- 日志输出格式 -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--
        根 Logger 配置
        level="INFO" - 设置日志级别为 INFO
        引用上面定义的 Appender
    -->
    <root level="INFO">
        <!-- 默认的控制台输出 Appender -->
        <appender-ref ref="CONSOLE" />
        <!-- 文件输出 Appender -->
        <appender-ref ref="FILE_ROLLING" />
    </root>

</configuration>